{
	"compilerOptions": {
		"typeRoots": [
			"./node_modules/@sapui5/ts-types-esm",
			"./node_modules/@types"
		],
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"rootDir": "./src",
        "outDir": "./webapp",
		"noEmit": true,
		"skipLibCheck": true,
		"module": "none",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": false,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"paths": {
			"expenses/app/mycredits/*": [
				"./src/*"
			]
		}
	},
	"include": [ "./src/**/*" ],
	"exclude": ["node_modules", "webapp", "dist"]
}